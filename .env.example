# Model backend: noop | huggingface | gemini
MODEL_BACKEND=noop

# Hugging Face config
HF_MODEL_ID=meta-llama/Meta-Llama-3-8B-Instruct
HF_DEVICE=cpu
HF_MAX_NEW_TOKENS=128
HF_TEMPERATURE=0.7

# Hugging Face API Key (for Inference API)
HUGGING_FACE_API_TOKEN="your-hf-key"

# Flask
FLASK_SECRET_KEY=change-me

# STT Backend
# Options: whisper_local | whisper | gemini | deepgram_streaming
STT_BACKEND=whisper_local

# Google API Key
GOOGLE_API_KEY="your-key"

# Deepgram API Key (for streaming STT)
DEEPGRAM_API_KEY="your-dg-key"